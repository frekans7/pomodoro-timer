{
  "manifest_version": 2,
  "name": "Pomodoro Timer",
  "author": "@frekans7",
  "description": "Pomodoro Timer App",
  "version": "1.0",
  "icons": {
    "16": "pomodoro.png",
    "48": "pomodoro.png",
    "128": "pomodoro.png"
  },
  "background": {
    "scripts": ["chrome/background.js"]
  },
  "browser_action": {
    "default_title": "Pomodoro",
    "default_icon": "pomodoro.png"
  },
  "permissions": ["tabs", "storage", "notifications"]
}
